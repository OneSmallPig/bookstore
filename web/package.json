{
  "name": "bianbian-bookstore",
  "version": "1.0.0",
  "description": "百变书屋 - 私人智能图书馆",
  "main": "index.js",
  "scripts": {
    "dev": "vite --port 3000 --host",
    "build": "vite build",
    "build:css": "tailwindcss -i ./src/css/styles.css -o ./src/css/output.css --watch",
    "preview": "vite preview",
    "api": "json-server --watch public/data/books.json --port 3001",
    "lint": "eslint src --ext .js",
    "format": "prettier --write \"src/**/*.{js,html,css}\""
  },
  "keywords": ["books", "library", "ai", "reading"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "alpinejs": "^3.13.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "json-server": "^0.17.4",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.4"
  }
}
